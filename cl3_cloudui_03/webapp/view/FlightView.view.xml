<mvc:View controllerName="code.cl3.cl3cloudui03.controller.FlightView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t= "sap.ui.table">
    <Page id="page" title="{i18n>title}">

    <VBox>
    <Panel>

    <t:Table rows="{/FlightSet}">
    <t:extension>
        <Title id = "flight" text="항공사 inforamtion"/>
    </t:extension>
    
    <t:columns>
        <t:Column >
            <Label text="carrid"/>
            <t:template>
                <Text text="{carrid}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="connid"/>
            <t:template>
                <Text text="{connid}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="fldate"/>
            <t:template>
                <Text text="{Fldate}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="bookid"/>
            <t:template>
                <Text text="{bookid}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Deptime"/>
            <t:template>
                <Text text="{Deptime}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="customid"/>
            <t:template>
                <Text text="{customid}"/>
            </t:template>
        </t:Column>
        <!-- <t:Column >
            <Label text="luggweight"/>
            <t:template>
                <Text text="{luggweight}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="wunit"/>
            <t:template>
                <Text text="{wunit}"/>
            </t:template>
        </t:Column> -->
       <t:Column >
        <Label text="Luggage Weight"/>
        <t:template>
        <Text text="{
            parts: [
                { path: 'luggweight' },
                { path: 'wunit' }
            ],
            type: 'sap.ui.model.type.Unit',
            formatOptions: {
                showMeasure: true
            }
        }"/>
        </t:template>   
        </t:Column>
        <!-- <t:Column >
            <Label text="forcuram"/>
            <t:template>
                <Text text="{forcuram}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="forcurkey"/>
            <t:template>
                <Text text="{forcurkey}"/>
            </t:template>
        </t:Column> -->
        <t:Column >
        <Label text="Foriegn Amount"/>
        <t:template>
        <Text text="{
            parts: [
                { path: 'forcuram' },
                { path: 'forcurkey' }
            ],
            type: 'sap.ui.model.type.Currency',
            formatOptions: {
                showMeasure: true
            }
        }"/>
        </t:template>   
        </t:Column>
    </t:columns>
    </t:Table>
    </Panel>

    </VBox>
    </Page>
</mvc:View>