<mvc:View controllerName="code.cl3.n11.cl3cloudui06.controller.StudentView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

    <VBox> 
        <Panel>
            <t:Table rows="{/StudentSet}" visibleRowCount="5" >
            <t:columns>
                <t:Column >
                <Label text="Student Id"/>
                <t:template>
                <Text text="{StdtNo}"/>
                </t:template>
            </t:Column>
            <t:Column >
                <Label text="Major"/>
                <t:template>
                <Text text="{Major}"/>
                </t:template>
            </t:Column>
            <t:Column >
                <Label text="Student Name"/>
                <t:template>
                <Text text="{StdtName}"/>
                </t:template>
            </t:Column>
            <t:Column >
            <Label text="Address"/>
                <t:template>
                <Text text="{Addr}"/>
                </t:template>
            </t:Column>
            <t:Column >
            <Label text="Email"/>
            <t:template>
                <Text text="{Email}"/>
            </t:template>
            </t:Column>
            <t:Column >
            <Label text="Gender"/>
            <t:template>
                <Text text="{Gender}"/>
            </t:template>
            </t:Column>
            </t:columns>
            </t:Table>
        </Panel>
    </VBox>
    </Page>
</mvc:View>