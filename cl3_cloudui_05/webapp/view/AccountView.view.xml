<mvc:View controllerName="code.cl3.n11.cl3cloudui05.controller.AccountView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
     xmlns:t= "sap.ui.table">
    <Page id="page" title="{i18n>title}">
     <VBox>

    <Panel>
    
    <t:Table rows="{/AccountSet}"
             visibleRowCount="4" id="accountTable">
    <t:extension>
        <Title id = "account" text="Account Document"/>
        <OverflowToolbar style="Clear">
        <ToolbarSpacer/>
        <ToolbarSeparator/>
        <SearchField id="searchBukrs" placeholder="Bukrs" search="onSearch" width="15rem"></SearchField>
        <SearchField id="searchGjahr" placeholder="Gjahr" search="onSearch" width="15rem"></SearchField>
        <SearchField id="searchBelnr" placeholder="Belnr" search="onSearch" width="15rem"></SearchField>
        </OverflowToolbar>
    </t:extension>
    
    <t:columns>
        <t:Column >
            <Label text="Company code"/>
            <t:template>
                <Text text="{Bukrs}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Document number"/>
            <t:template>
                <Text text="{Belnr}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Fiscal Year"/>
            <t:template>
                <Text text="{Gjahr}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="line item"/>
            <t:template>
                <Text text="{Buzei}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="debit/credit"/>
            <t:template>
                <Text text="{Shkzg}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="business"/>
            <t:template>
                <Text text="{Gsber}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Amount"/>
        <t:template>
        <Text text="{
            parts: [
                { path: 'Wrbtr' },
                { path: 'HWaers' }
            ],
            type: 'sap.ui.model.type.Currency',
            formatOptions: {
                showMeasure: true
            }
        }"/>
    </t:template>
        </t:Column>
            <t:Column >
            <Label text="Quantity"/>
                <t:template>
        <Text text="{
            parts: [
                { path: 'Menge' },
                { path: 'Meins' }
            ],
            type: 'sap.ui.model.type.Unit',
            formatOptions: {
                showMeasure: true
            }
        }"/>
    </t:template>
        </t:Column>
                <!-- <t:Column >
            <Label text="Unit"/>
            <t:template>
                <Text text="{Meins}"/>
            </t:template>
        </t:Column> -->
        
            <t:Column >
            <Label text="Tax"/>
            <t:template>
                <Text text="{Mwskz}"/>
            </t:template>
        </t:Column>
    </t:columns>
    </t:Table>
    </Panel>

    </VBox>
    </Page>
</mvc:View>