<mvc:View controllerName="code.cl3.n11.cl3cloudui07.controller.AirlineView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:t= "sap.ui.table"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
         <VBox>
    <Panel>

    <t:Table  id="airline" rows="{/AirlineSet}"
              >
    <t:extension>
        <Title id = "air" text="Airline Data"/>
    </t:extension>
    
    <t:columns>
        <t:Column >
            <Label text="Airline id"/>
            <t:template>
                <Text text="{Carrid}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Airline name"/>
            <t:template>
                <Text text="{Carrname}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Currcode"/>
            <t:template>
                <Text text="{Currcode}"/>
            </t:template>
        </t:Column>
        <t:Column >
            <Label text="Url"/>
            <t:template>
                <Text text="{Url}"/>
            </t:template>
        </t:Column>
    </t:columns>
    </t:Table>
    </Panel>

    <Panel class="sapUiResponsiveMargin" width="660px">
                <MessageStrip showIcon="true" text="Data control" showCloseButton="false" />
                <OverflowToolbar >
                    <ToolbarSpacer />
                    <Button text="Display" type="Accept" icon="sap-icon://detail-view" press="onDisplay" />
                    <Button text="Create"  type="Attention" icon="sap-icon://create" press="onCreate"/>
                    <Button text="Update"  type="Attention" icon="sap-icon://write-new-document" press="onUpdate"/>
                    <Button text="Delete"  type="Accept" icon="sap-icon://delete" press="onDelete" />
                </OverflowToolbar>
                <f:SimpleForm layout="ResponsiveGridLayout" title="Content">
                    <f:content>
                        <Label text="Airline code" />
                        <Input id="Carrid" width="3rem"/>
                        <Label text="Airline" />
                        <Input id="Carrname" width="10rem"/>
                        <Label text="Currency" />
                        <Input id="Currcode" width="3rem"/>
                        <Label text="Airline URL" />
                        <Input id="Url" width="13rem"/>
                    </f:content>
                </f:SimpleForm>
            </Panel>

    </VBox>
    
    </Page>
</mvc:View>